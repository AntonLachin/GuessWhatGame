<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.guesswhatgame.GameWindowController"
            prefHeight="300.0" prefWidth="300.0">
    <VBox alignment="CENTER">
        <Label fx:id="numberOfAttempts" text="Let's play!"/>
        <Label fx:id="answer" visible="false"/>
        <TextField fx:id="guesses" text="Enter your number" />
        <Button fx:id="check" text="ClickMe!" onMousePressed="#check"/>
        <HBox alignment="CENTER">
            <Label fx:id="moreThan" text="Number is more than: "/>
            <Label fx:id="lessThan" text="Number is less than: "/>
        </HBox>
    </VBox>
</VBox>
